<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="root" alignment="CENTER" prefHeight="563.0" prefWidth="611.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="HangmanController">
    <Label fx:id="wordLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <Canvas fx:id="hangmanCanvas" height="365.0" width="557.0" />
    <Label fx:id="guessedLettersLabel" style="-fx-font-size: 16px;" text="Guessed Letters: " />
    <HBox alignment="CENTER" spacing="10">
        <ComboBox fx:id="letterComboBox" prefHeight="30" prefWidth="80" style="-fx-font-size: 14px;" />
        <Button onAction="#handleGuess" prefHeight="30" prefWidth="80" style="-fx-font-size: 14px;" text="Guess" />
        <Button onAction="#handleNewGame" prefHeight="30" prefWidth="100" style="-fx-font-size: 14px;" text="New Game" />
    </HBox>
</VBox>
